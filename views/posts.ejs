<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>

    <div class="posts">
      <div class="container">
        <% if (posts.length) { %> <% posts.forEach(({ id, title, date, text,
        subject }) => { %>
        <section class="post">
          <div class="post__header post__header--preview">
            <a href="/posts/<%= id %>">
              <img
                class="post__img"
                src="http://placehold.it/750x350"
                alt="..."
              />
            </a>
          </div>

          <div class="post__content">
            <h2 class="post__title"><%= title %></h2>
            <p class="post__description"><%= text %></p>
          </div>

          <div class="post__footer">
            <ul class="post__data">
              <li class="post__data--item">
                <time datetime="2021-02-13"><%= date %></time>
              </li>
              <li class="post__data--item"><%= subject %></li>
            </ul>

            <a class="post__read" href="/posts/<%= id %>">read more</a>
          </div>
        </section>
        <% }) %> <% } %>
      </div>
    </div>
  </body>
</html>
